@model IEnumerable<HotelMangementSystem.ViewModel.RoomDetailsViewModel>

<table class="table table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Action
            </th>
            <th>
                Oda Fotoğrafı
            </th>
            <th>
                Oda Numarası
            </th>
            <th>
                Oda Fiyatı
            </th>
            <th>
                Randevu Durumu
            </th>
            <th>
                Oda Tipi
            </th>
            <th>
                Oda Kapasitesi
            </th>
            <th>
                Oda Tanımı
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    <span id="btnDelete" class="glyphicon glyphicon-trash" onclick="DeleteRoom(@item.RoomId)"></span>&nbsp;&nbsp;
                    <span id="btnEdit" class="glyphicon glyphicon-pencil" onclick="EditRoom(@item.RoomId)"></span>
                </td>
                <td>
                    <img src="@Url.Content("~/RoomImages/" + item.RoomImage)" width="80" height="30" class="img-responsive" />
                </td>
                <td>
                    @item.RoomNumber
                </td>
                <td>
                    @item.RoomPrice
                </td>
                <td>
                    @item.BookingStatus
                </td>
                <td>
                    @item.RoomType
                </td>
                <td>
                    @item.RoomCapacity
                </td>
                <td>
                    @item.RoomDescription
                </td>
            </tr>
        }
    </tbody>
</table>